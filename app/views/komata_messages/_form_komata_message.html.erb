<%= form_for(komata_message) do |f| %>

    <div class="form-group">
      <%=f.label :image,"投稿画像" %>
      <%= f.file_field :image %>    
    </div>

    <div class="form-group">
      <%= f.text_area :content, class: 'form-control', rows: 5 %>
    </div>
    
    <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>

      
<% end %>