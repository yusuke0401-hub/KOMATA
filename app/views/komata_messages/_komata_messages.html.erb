<ul class="media-list">
<% komata_messages.each do |komata_message| %>
    <li class="media">
      <div class="media-left">
        <% if komata_message.image? %>
          <%= image_tag komata_message.image.url(:thumb), class: "media-object img-rounded" %>
        <% end %>
      </div>
      <div class="media-body">
        <div>
          <%= link_to komata_message.user.name, user_path(komata_message.user) %>
          <span class="text-muted">posted at <%= komata_message.created_at %></span>
        </div>
        <div>
          <p><%= komata_message.content %></p>
        </div>
        <div>
          <%= link_to "komata詳細", komata_message_path(komata_message), class: 'btn btn-danger btn-xs' %>

          <% if current_user == komata_message.user %>
          <%= link_to "削除", komata_message, method: :delete, data: { confirm: "本当に削除しますか？" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
        </div>
      </div>
    </li>
<% end %>

  
<%= paginate komata_messages %>

</ul>