<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin" }) do |f| %>
  <%= devise_error_messages %>  
  <h2 class="my-3 font-weight-norma">パスワードを<br>忘れましたか?</h2>

  <div class="field  mb-3">
    <%= f.label :email, class: "sr-only" %><br />
    <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "パスワードの再設定方法を送信する", class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
