<div class="card col-sm-10 mx-auto mt-5 px-0">
  <div class="card-header bg-white">
    <h2>アカウント情報</h2>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-sm-8">
        <!-- 略 -->
      </div>
      <div class="col-sm-4">
        <div class="d-flex flex-column">
          <%= image_tag @user.avatar, class: "float-center border mb-2 mx-auto" %>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="d-flex flex-column">
          <%= @user.profile %>
        </div>
      </div>
    </div>
    <ul>
      <li>
        <%= link_to "フォロー", followings_user_path(@user) %>
        <%= @count_followings %>
      </li>
      <li>
        <%= link_to "フォロワー", followers_user_path(@user) %>
        <%= @count_followers %>
      </li>
    </ul>

  </div>
</div>