<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <%= devise_error_messages %>  
  <h2 class="my-3 font-weight-normal">ログイン</h2>
  <div class="field">
    <%= f.label :login, class: "sr-only" %><br />
    <%= f.text_field :login, class: "form-control", placeholder: "名前もしくはメールアドレス" %>
  </div>

  <div class="field mb-3">
    <%= f.label :password, class: "sr-only" %><br />
    <%= f.password_field :password, class: "form-control", placeholder: "パスワード", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field checkbox mb-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
